<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/table_cell_border">

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvShift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shift" />

    <TextView
        android:id="@+id/tvModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model" />

    <TextView
        android:id="@+id/tvPlan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan" />

    <TextView
        android:id="@+id/tvPartName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Part Name" />

    <TextView
        android:id="@+id/tvOB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OB" />

    <TextView
        android:id="@+id/tvDispatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dispatch" />

    <TextView
        android:id="@+id/tvReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received" />

    <TextView
        android:id="@+id/tvRemPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining PS" />

    <TextView
        android:id="@+id/tvRemVA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining VA" />

    <TextView
        android:id="@+id/tvProduced"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produced" />

    <TextView
        android:id="@+id/tvRejection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejection" />

    <TextView
        android:id="@+id/tvCB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Closing Balance" />

</LinearLayout>
