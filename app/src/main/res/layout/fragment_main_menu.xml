<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- App Title -->
        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PART TRACKER"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/bajaj_blue"
            android:layout_marginBottom="24dp" />

        <!-- Card Container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoToPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plan"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/bajaj_blue"
                    android:layout_marginBottom="12dp"
                    app:icon="@drawable/ic_plan"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDashboard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dashboard"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/bajaj_blue"
                    android:layout_marginBottom="12dp"
                    app:icon="@drawable/ic_dashboard"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/bajaj_blue"
                    android:layout_marginBottom="12dp"
                    app:icon="@drawable/ic_status"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnScanQR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scan QR Code"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/bajaj_blue"
                    android:layout_marginBottom="12dp"
                    app:icon="@drawable/ic_scan_qr"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGenerateQR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate QR Code"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/bajaj_blue"
                    android:layout_marginBottom="20dp"
                    app:icon="@drawable/ic_generate_qr"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewScanHistory"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Scan History"
                    android:textColor="@color/bajaj_blue"
                    android:strokeColor="@color/bajaj_blue"
                    android:strokeWidth="2"
                    android:backgroundTint="@color/white"
                    app:icon="@drawable/ic_scan_history"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="@color/bajaj_blue"
                    android:strokeColor="@color/bajaj_blue"
                    android:strokeWidth="2"
                    android:backgroundTint="@color/white"
                    app:icon="@drawable/ic_logout"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:cornerRadius="12dp"
                    android:layout_marginTop="16dp"/>


                <TextView
                    android:id="@+id/footerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â© Bajaj Auto Limited"
                    android:textColor="#999999"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:padding="4dp"
                    android:clickable="true"
                    android:focusable="true" />





            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
