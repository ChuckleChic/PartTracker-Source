<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/locationSelectorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@android:color/white">

    <!-- Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:padding="24dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Scan Location"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:textColor="#333333" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPaintshop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan in Paintshop"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_scan_qr"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/bajaj_blue" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCTL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan in CTL"
                app:cornerRadius="16dp"
                android:layout_marginTop="16dp"
                app:icon="@drawable/ic_scan_qr"
                app:iconPadding="8dp"
                app:iconTint="@android:color/white"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/bajaj_blue" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
