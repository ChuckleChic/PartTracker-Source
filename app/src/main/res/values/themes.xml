<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PartTracker.Material" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/bajaj_blue</item>
        <item name="colorPrimaryVariant">@color/bajaj_blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/bajaj_light_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Text -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/bajaj_light_blue</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bajaj_blue_dark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/white</item>
    </style>

</resources>
